<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c - %m%n</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile name="ccom.esed.payer.archiviocarichi.webservice-ws"
                	  fileName="${sys:jboss.server.log.dir}/ccom.esed.payer.archiviocarichi.webservice-ws.log"
                	  filePattern="mgp.%i.log.gz"
                	  ignoreExceptions="false" filePermissions="rw-rw-r--">
            <PatternLayout pattern="${LOG_PATTERN}"/>
			<!-- <JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/> -->
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        <RollingFile name="ccom.esed.payer.archiviocarichi.webservice-ws-error"
                	 fileName="${sys:jboss.server.log.dir}/ccom.esed.payer.archiviocarichi.webservice-ws-error.log"
                	 filePattern="ccom.esed.payer.archiviocarichi.webservice-ws-error.%i.log"
                     ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="200MB" />
            </Policies>
            <ThresholdFilter level="ERROR"/>
        </RollingFile>
        <RollingFile name="ccom.esed.payer.archiviocarichi.webservice-ws-debug"
                	 fileName="${sys:jboss.server.log.dir}/ccom.esed.payer.archiviocarichi.webservice-ws-debug.log"
                	 filePattern="ccom.esed.payer.archiviocarichi.webservice-ws-debug.%i.log"
                     ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <ThresholdFilter level="DEBUG"/>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        
        
        
        
        
                <RollingFile name="ccom.esed.payer.archiviocarichi.webservice"
                	  fileName="${sys:jboss.server.log.dir}/ccom.esed.payer.archiviocarichi.webservice.log"
                	  filePattern="mgp.%i.log.gz"
                	  ignoreExceptions="false" filePermissions="rw-rw-r--">
            <PatternLayout pattern="${LOG_PATTERN}"/>
			<!-- <JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/> -->
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        <RollingFile name="ccom.esed.payer.archiviocarichi.webservice-error"
                	 fileName="${sys:jboss.server.log.dir}/ccom.esed.payer.archiviocarichi.webservice-error.log"
                	 filePattern="ccom.esed.payer.archiviocarichi.webservice-error.%i.log"
                     ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="200MB" />
            </Policies>
            <ThresholdFilter level="ERROR"/>
        </RollingFile>
        <RollingFile name="ccom.esed.payer.archiviocarichi.webservice-debug"
                	 fileName="${sys:jboss.server.log.dir}/ccom.esed.payer.archiviocarichi.webservice-debug.log"
                	 filePattern="ccom.esed.payer.archiviocarichi.webservice-debug.%i.log"
                     ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <ThresholdFilter level="DEBUG"/>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        
        
    </Appenders>
    <Loggers>
		<Logger name="com.esed.pagopa.pdf.webservice" level="DEBUG" additivity="false">
			<AppenderRef ref="ccom.esed.payer.archiviocarichi.webservice-ws" />
            <AppenderRef ref="ccom.esed.payer.archiviocarichi.webservice-ws-debug" />
            <AppenderRef ref="ccom.esed.payer.archiviocarichi.webservice-ws-error" />
		</Logger>         
        <Root level="INFO" >
            <AppenderRef ref="STDOUT" />
        </Root>
        
        <Logger name="com.esed.pagopa.pdf" level="DEBUG" additivity="false">
			<AppenderRef ref="ccom.esed.payer.archiviocarichi.webservice" />
            <AppenderRef ref="ccom.esed.payer.archiviocarichi.webservice-debug" />
            <AppenderRef ref="ccom.esed.payer.archiviocarichi.webservice-error" />
		</Logger>         
        <Root level="INFO" >
            <AppenderRef ref="STDOUT" />
        </Root>
        
    </Loggers>
</Configuration>
